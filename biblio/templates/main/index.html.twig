{% extends 'base.html.twig' %}

{% block title %}Biblio ~ Homepage{% endblock %}

{% block body %}

<div class="container">

<div class="row">
<h1>
  Homepage
</h1>
</div>


<div class="row">
<h2>
  Derniers livres
</h2>
</div>
<table class="table table-hover mt-3">
  <thead>
    <tr>
      <th scope="col">Titre</th>
      <th scope="col">Auteur</th>
      <th scope="col">Resume</th>
      <th scope="col">Lu/ pas lu</th>
    </tr>
  </thead> 
{% for book in books %}
    <tr class="table-{% if loop.index is even %}light{% else %}dark{% endif %}">
      <td> <a href="{{ path('book_read', {'id' : book.id}) }}">
      {{book.name}}</a></td>
      <td>{{book.author}}</td>
      <td>{{book.resume|slice(0, 30)}}... <a class="text-muted" href="{{path('book_read', {'id' : book.id})}}">Lire la suite</a> </td>
      <td>{{book.isRead}}</td>
    </tr>
{% endfor %}
  </tbody>
</table>


<div class="row">
<h2>
  Dernières personnes
</h2>
</div>
<table class="table table-hover mt-3">
  <thead>
    <tr>
      <th scope="col">Nom de famille</th>
      <th scope="col">Prénom</th>

    </tr>
  </thead> 
{% for person in people %}
    <tr class="table-{% if loop.index is even %}light{% else %}dark{% endif %}">
      <td>{{person.familyName}}</a></td>
      <td>{{person.name}}</td>
    </tr>
{% endfor %}
  </tbody>
</table>





</div>
{% endblock %}

